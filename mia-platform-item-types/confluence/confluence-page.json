{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the Confluence page"
    },
    "type": {
      "type": "string",
      "description": "The type of the content (page, blogpost)"
    },
    "status": {
      "type": "string",
      "description": "The status of the page (current, trashed)"
    },
    "title": {
      "type": "string",
      "description": "The title of the page"
    },
    "spaceId": {
      "type": "string",
      "description": "The ID of the space containing this page"
    },
    "parentId": {
      "type": "string",
      "description": "The ID of the parent page"
    },
    "authorId": {
      "type": "string",
      "description": "The ID of the page author"
    },
    "version": {
      "type": "object",
      "properties": {
        "number": {
          "type": "integer",
          "description": "Version number"
        },
        "message": {
          "type": "string",
          "description": "Version message"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When this version was created"
        },
        "authorId": {
          "type": "string",
          "description": "The ID of the version author"
        }
      }
    },
    "body": {
      "type": "object",
      "properties": {
        "storage": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string",
              "description": "Page content in storage format"
            },
            "representation": {
              "type": "string",
              "description": "Content representation format"
            }
          }
        },
        "atlas_doc_format": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string",
              "description": "Page content in Atlas document format"
            },
            "representation": {
              "type": "string",
              "description": "Content representation format"
            }
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the page was created"
    },
    "_links": {
      "type": "object",
      "properties": {
        "webui": {
          "type": "string",
          "description": "Web URL to access the page"
        }
      }
    }
  },
  "required": ["id", "type", "status", "title"],
  "additionalProperties": true
}