{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "integrations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "jira",
                  "console"
                ]
              },
              "webhookPath": {
                "type": "string"
              },
              "authentication": {
                "type": "object",
                "properties": {
                  "secret": {
                    "$ref": "#/definitions/secret"
                  },
                  "headerName": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "type"
            ]
          },
          "pipelines": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "processors": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "mapper"
                          },
                          "outputEvent": {
                            "type": "object"
                          }
                        },
                        "required": [
                          "type",
                          "outputEvent"
                        ]
                      },
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "filter"
                          },
                          "celExpression": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "type",
                          "celExpression"
                        ]
                      }
                    ]
                  }
                },
                "sinks": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "mongo"
                          },
                          "url": {
                            "$ref": "#/definitions/secret"
                          },
                          "collection": {
                            "type": "string"
                          },
                          "insertOnly": {
                            "type": "boolean"
                          }
                        },
                        "required": [
                          "type",
                          "url",
                          "collection"
                        ]
                      }
                    ]
                  }
                }
              },
              "required": [
                "sinks"
              ]
            },
            "minItems": 1
          }
        },
        "required": [
          "source",
          "pipelines"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "integrations"
  ],
  "additionalProperties": false,
  "definitions": {
    "secret": {
      "type": "object",
      "properties": {
        "fromEnv": {
          "type": "string"
        },
        "fromFile": {
          "type": "string"
        }
      }
    }
  }
}
