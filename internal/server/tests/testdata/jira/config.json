{
  "integrations": [
    {
      "source": {
        "type": "jira"
      },
      "pipelines": [
        {
          "sinks": [
            {
              "type": "mongo",
              "url": {
                "fromEnv": "INTEGRATION_TEST_MONGO_URL"
              },
              "collection": "jira"
            }
          ]
        },
        {
          "processors": [
            {
              "type": "filter",
              "celExpression": "eventType.startsWith('jira:issue_')"
            },
            {
              "type": "mapper",
              "outputEvent": {
                "key": "{{ issue.key }}",
                "summary": "{{ issue.fields.summary }}",
                "createdAt": "{{ issue.fields.created }}",
                "description": "{{ issue.fields.description }}"
              }
            }
          ],
          "sinks": [
            {
              "type": "mongo",
              "url": {
                "fromEnv": "INTEGRATION_TEST_MONGO_URL"
              },
              "collection": "jira-issues"
            }
          ]
        }
      ]
    }
  ]
}
